{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo-theme",
    "rootDir": "src",
    "outDir": "lib",
    "module": "esnext",
    "target": "esnext"
  },
  "include": ["src/theme", "src/core", "src/*.d.ts"],
  "exclude": ["**/__tests__/**"]
}
